{
  "name": "@authumn/user-service",
  "version": "0.0.0-development",
  "private": true,
  "description": "Authumn user service",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist/",
    "source": ". .env && echo $ISSET",
    "prepare": "npm run clean && tsc",
    "test": "npm run e2e",
    "test.disable": "mocha src/**/*.spec.ts --require ts-node/register --reporter spec",
    "start": "node index.js",
    "lint": "tslint src/**/*.ts e2e/**/*.ts --fix",
    "watch": "tsc -w",
    "serve": "nodemon --exec ts-node -- --inspect ./src/server.ts",
    "e2e": "JWT_SECRET=secret MONGO_URL=mongodb://localhost/authumn-user-test jest --config=e2e/jest-e2e.json --forceExit",
    "e2e:watch": "jest --watch --config=e2e/jest-e2e.json",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once",
    "build": "npm run prepare && docker build -t authumn/user-service:latest .",
    "ownerlist": "ts-node src/getOwnerList.ts",
    "push": "docker push authumn/user-service:latest"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.1",
    "@nestjs/core": "^5.0.1",
    "@nestjs/microservices": "^5.0.1",
    "@nestjs/swagger": "^2.2.0",
    "@nestjs/testing": "^5.0.1",
    "@nestling/config": "^1.1.1",
    "@nestling/context": "^1.7.0",
    "@nestling/errors": "^1.2.1",
    "@nestling/logger": "^1.2.0",
    "@nestling/messages": "^1.2.0",
    "@nestling/mongodb": "^1.2.0",
    "@nestling/redis": "^1.1.0",
    "@nestling/validator": "^1.4.5",
    "@types/bcrypt": "^2.0.0",
    "@types/bluebird": "^3.5.21",
    "@types/bunyan": "^1.8.4",
    "@types/chai": "^4.1.4",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.16.0",
    "@types/glob": "^5.0.35",
    "@types/jest": "^23.1.4",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mongodb": "^3.1.0",
    "@types/mustache": "^0.8.31",
    "@types/node": "^10.5.1",
    "@types/nodemailer": "^4.6.2",
    "@types/redis": "^2.8.6",
    "@types/uuid": "^3.4.3",
    "ajv": "^6.5.2",
    "ajv-async": "^1.0.1",
    "ajv-i18n": "^3.3.0",
    "bcrypt": "^2.0.1",
    "bluebird": "^3.5.1",
    "bunyan": "^1.8.12",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "glob": "^7.1.2",
    "grpc": "^1.13.0",
    "jsonwebtoken": "^8.3.0",
    "mongodb": "^3.1.0",
    "multer": "^1.3.1",
    "mustache": "^2.3.0",
    "nodemailer": "^4.6.7",
    "objenv": "^2.2.0",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.1",
    "ts-node": "^7.0.0",
    "typescript": "^2.9.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "cz-conventional-changelog": "^2.1.0",
    "grpc-caller": "^0.7.0",
    "jest": "^23.2.0",
    "nodemon": "^1.17.5",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.6.3",
    "semantic-release-docker": "^2.1.0",
    "supertest": "^3.1.0",
    "travis-deploy-once": "^5.0.1",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/authumn/authumn-user.git"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm test"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/npm",
      "semantic-release-docker"
    ],
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      },
      {
        "path": "semantic-release-docker",
        "name": "authumn/user-service"
      }
    ]
  }
}
