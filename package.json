{
  "name": "@authumn/user-service",
  "version": "0.0.0-development",
  "private": true,
  "description": "Authumn user service",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf dist/",
    "source": ". .env && echo $ISSET",
    "prepare": "npm run clean && tsc",
    "test": "true",
    "test.disable": "mocha src/**/*.spec.ts --require ts-node/register --reporter spec",
    "start": "node index.js",
    "lint": "tslint src/**/*.ts e2e/**/*.ts --fix",
    "watch": "tsc -w",
    "serve": "nodemon --exec ts-node -- --inspect ./src/server.ts",
    "e2e": "JWT_SECRET=secret MONGO_URL=mongodb://localhost/authumn-user-test jest --config=e2e/jest-e2e.json --forceExit",
    "e2e:watch": "jest --watch --config=e2e/jest-e2e.json",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.1",
    "@nestjs/core": "^5.0.1",
    "@nestjs/testing": "^5.0.1",
    "@nestling/config": "^1.1.1",
    "@nestling/context": "^1.2.1",
    "@nestling/errors": "^1.2.1",
    "@nestling/logger": "^1.2.0",
    "@nestling/mongodb": "^1.2.0",
    "@nestling/redis": "^1.1.0",
    "@nestling/validator": "^1.4.5",
    "@types/bcrypt": "^2.0.0",
    "@types/bluebird": "^3.5.20",
    "@types/bunyan": "^1.8.4",
    "@types/chai": "^4.1.3",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.11.1",
    "@types/glob": "^5.0.35",
    "@types/jest": "^22.2.3",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/mongodb": "^3.0.18",
    "@types/node": "^10.1.2",
    "@types/nodemailer": "^4.6.0",
    "@types/redis": "^2.8.6",
    "@types/uuid": "^3.4.3",
    "ajv": "^6.5.0",
    "ajv-async": "^1.0.1",
    "ajv-i18n": "^3.3.0",
    "bcrypt": "^2.0.1",
    "bluebird": "^3.5.1",
    "bunyan": "^1.8.12",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "glob": "^7.1.2",
    "jsonwebtoken": "^8.2.1",
    "mongodb": "^3.1.0-beta4",
    "multer": "^1.3.0",
    "nodemailer": "^4.6.5",
    "objenv": "^2.2.0",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.2.0",
    "ts-node": "^6.0.5",
    "typescript": "^2.8.3",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^23.0.0",
    "nodemon": "^1.17.5",
    "rimraf": "^2.6.2",
    "semantic-release": "^15.5.0",
    "semantic-release-docker": "^2.1.0",
    "supertest": "^3.1.0",
    "travis-deploy-once": "^5.0.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/authumn/authumn-user.git"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm test"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/npm",
      "semantic-release-docker"
    ],
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": false
      },
      {
        "path": "semantic-release-docker",
        "name": "rhalff/authumn-user"
      }
    ]
  }
}
