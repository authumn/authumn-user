{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "strict": true,
    "allowJs": true,
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types",
      "/types"
    ]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "ATTIC",
    "dist"
  ]
}
