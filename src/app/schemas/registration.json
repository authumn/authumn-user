{
  "$id": "registration.json",
  "$async": true,
  "title": "User Registration",
  "allOf": [
    {
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "unique": {
            "collection": "users",
            "field": "email"
          }
        },
        "password": {
          "type": "string",
          "minLength": 6,
          "maxLength": 255
        }
      },
      "required": [
        "email",
        "password"
      ]
    },
    {
      "properties": {
        "firstName": {
          "title": "First Name",
          "type": "string"
        },
        "lastName": {
          "title": "Last Name",
          "type": "string"
        },
        "newsletter": {
          "title": "Newsletter",
          "type": "boolean"
        }
      },
      "required": [
      ]
    }
  ]
}
