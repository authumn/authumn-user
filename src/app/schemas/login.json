{
  "$id": "login.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$async": true,
  "title": "User Login",
  "properties": {
    "password": {
      "type": "string",
      "minLength": 6,
      "maxLength": 255
    },
    "email": {
      "type": "string",
      "format": "email",
      "idExists": false
    },
    "remember_me": {
      "title": "Remember Me",
      "type": "boolean"
    }
  },
  "required": [
    "email",
    "password"
  ]
}
